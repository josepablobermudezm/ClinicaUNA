<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTimePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@newCascadeStyleSheet.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clinicauna.controller.MedicosController">
   <center>
      <VBox spacing="70.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="Titulo" text="Mantenimiento de Médicos" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="281.0" prefWidth="1030.0">
               <children>
                  <TableView fx:id="table" onMouseReleased="#DatosMedico" prefHeight="280.0" prefWidth="990.0">
                     <columns>
                        <TableColumn fx:id="COL_NOMBRE_MEDICOS" prefWidth="243.0" text="Nombre Completo" />
                        <TableColumn fx:id="COL_CODIGO_MEDICOS" prefWidth="138.0" text="Código" />
                        <TableColumn fx:id="COL_FOLIO_MEDICOS" prefWidth="136.0" text="Folio" />
                        <TableColumn fx:id="COL_CARNE_MEDICOS" prefWidth="101.0" text="Carné" />
                        <TableColumn fx:id="COL_ESTADO_MEDICOS" prefWidth="86.0" text="Estado" />
                        <TableColumn fx:id="COL_INICIO_MEDICOS" prefWidth="86.0" text="Inicio Jornada" />
                        <TableColumn fx:id="COL_FINAL_MEDICOS" prefWidth="113.0" text="Final Jornada" />
                        <TableColumn fx:id="COL_ESPACIOS_MEDICOS" prefWidth="115.0" text="Espacio por Hora" />
                     </columns>
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </TableView>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="80.0">
               <children>
                  <JFXTextField fx:id="txtFolio" labelFloat="true" prefHeight="29.0" prefWidth="250.0" promptText="Folio" />
                  <JFXTextField fx:id="txtCarne" labelFloat="true" prefHeight="29.0" prefWidth="250.0" promptText="Carné" />
                  <JFXTextField fx:id="txtCodigo" labelFloat="true" prefHeight="29.0" prefWidth="250.0" promptText="Código" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="80.0">
               <children>
                  <JFXTimePicker fx:id="timePickerInicio" defaultColor="#042f86" prefHeight="29.0" prefWidth="250.0" promptText="Inicio Jornada" />
                  <JFXTimePicker fx:id="timePickerfinal" defaultColor="#042f86" prefHeight="29.0" prefWidth="250.0" promptText="Final Jornada" />
                  <JFXTextField fx:id="txtEspacio" labelFloat="true" prefHeight="29.0" prefWidth="250.0" promptText="Espacio por Hora" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="79.0" prefWidth="1030.0">
               <children>
                  <HBox alignment="TOP_CENTER" prefHeight="55.0" prefWidth="443.0" spacing="20.0">
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                     <children>
                        <JFXButton fx:id="btnEditar1" onAction="#editar" style="-fx-cursor: hand;" text="Editar" />
                        <JFXButton fx:id="btnEliminar1" onAction="#eliminar" style="-fx-cursor: hand;" text="Eliminar" />
                        <JFXButton fx:id="btnLimpiarRegistro" onAction="#limpiarRegistro" style="-fx-cursor: hand;" text="Limpiar Registro" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
