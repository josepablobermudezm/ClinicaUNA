<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@newCascadeStyleSheet.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clinicauna.controller.ReportesController">
   <center>
      <VBox alignment="CENTER" spacing="30.0">
         <children>
            <HBox alignment="CENTER" prefHeight="69.0" prefWidth="1030.0">
               <children>
                  <Label fx:id="Titulo" prefHeight="56.0" prefWidth="194.0" text="Reportes" textAlignment="CENTER" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="1030.0">
               <children>
                  <Label fx:id="lblTituloPaciente" prefHeight="29.0" prefWidth="194.0" styleClass="lbl" text="Reporte del Paciente" textAlignment="CENTER" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="203.0" prefWidth="1030.0" spacing="30.0">
               <children>
                  <VBox spacing="25.0">
                     <children>
                        <JFXTextField fx:id="txtNombre" labelFloat="true" onKeyReleased="#ReleasedNombre" opacity="0.5" prefHeight="25.0" prefWidth="375.0" promptText="Nombre" />
                        <JFXTextField fx:id="txtCedula" labelFloat="true" onKeyReleased="#ReleasedCedula" opacity="0.46" promptText="Cédula" />
                        <JFXTextField fx:id="txtApellido" labelFloat="true" onKeyReleased="#ReleasedApellido" opacity="0.46" promptText="Apellido" />
                        <JFXButton fx:id="btnGenerarReportePac" alignment="CENTER" onAction="#GenerarReportePaciente" prefHeight="31.0" prefWidth="132.0" style="-fx-cursor: hand;" text="Generar Reporte" />
                     </children>
                  </VBox>
                  <TableView fx:id="tvPaciente" onMouseReleased="#seleccionarPaciente" prefHeight="203.0" prefWidth="575.0">
                    <columns>
                      <TableColumn fx:id="colPacNombre" prefWidth="75.0" text="Nombre" />
                      <TableColumn fx:id="colCedPaciente" prefWidth="75.0" text="Cédula" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="1030.0">
               <children>
                  <Label fx:id="lblTituloMedico" prefHeight="30.0" prefWidth="256.0" styleClass="lbl" text="Reportes de Medicos" textAlignment="CENTER" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="31.0" prefWidth="1030.0" spacing="10.0">
               <children>
                  <HBox spacing="10.0" />
                  <HBox spacing="10.0">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <HBox spacing="10.0">
                                 <children>
                                    <JFXDatePicker fx:id="DateFechaInicio" defaultColor="#0e0e86" promptText="Fecha Inicial" />
                                 </children>
                              </HBox>
                              <HBox spacing="10.0">
                                 <children>
                                    <JFXDatePicker fx:id="DateFechaFin" defaultColor="#0e0e86" promptText="Fecha Final" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                        <JFXButton fx:id="btnGenerarReporteMed" onAction="#GenerarReporteMedico" prefHeight="31.0" prefWidth="77.0" style="-fx-cursor: hand;" text="Agenda" />
                     </children>
                  </HBox>
                  <JFXButton fx:id="btnPorcentajeCitas" onAction="#porcentajeCitas" prefHeight="31.0" prefWidth="151.0" style="-fx-cursor: hand;" text="Porcentaje de Citas" />
                  <JFXButton fx:id="btnLimpiar" onAction="#limpiarRegistro" prefHeight="31.0" prefWidth="103.0" style="-fx-cursor: hand;" text="Limpiar Valores" />
               </children>
            </HBox>
            <Separator prefHeight="8.0" prefWidth="987.0" />
            <HBox alignment="CENTER" prefHeight="249.0" prefWidth="1030.0" spacing="30.0">
               <children>
                  <VBox prefHeight="119.0" prefWidth="375.0" spacing="25.0">
                     <children>
                        <JFXTextField fx:id="txtFolio" labelFloat="true" onKeyReleased="#ReleasedFolio" opacity="0.55" prefHeight="25.0" prefWidth="375.0" promptText="Folio" />
                        <JFXTextField fx:id="txtCodigo" labelFloat="true" onKeyReleased="#ReleasedCodigo" opacity="0.5" promptText="Codigo" />
                        <JFXTextField fx:id="txtCarne" labelFloat="true" onKeyReleased="#ReleasedCarne" opacity="0.5" promptText="Carné" />
                     </children>
                  </VBox>
                  <VBox prefHeight="205.0" prefWidth="575.0" spacing="20.0">
                     <children>
                        <TableView fx:id="tvMedico" onMouseReleased="#seleccionarMedico" prefHeight="203.0" prefWidth="575.0">
                           <columns>
                              <TableColumn fx:id="ColNomMed" prefWidth="75.0" text="Nombre" />
                              <TableColumn fx:id="ColFolMed" prefWidth="75.0" text="Folio" />
                              <TableColumn fx:id="col_codigo" prefWidth="75.0" text="Código" />
                              <TableColumn fx:id="Col_Carne" prefWidth="75.0" text="Carné" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox alignment="TOP_RIGHT" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
